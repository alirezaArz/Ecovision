{
  "name": "frontend",
  "private": true,
  "version": "1.0.0",
  "productName": "Ecovision",
  "description": "An AI-powered full-stack platform for economic news analysis.",
  "main": "main.cjs",
  "type": "module",
  "scripts": {
    "dev": "vite --host 127.0.0.1 --port 5173",
    "build": "vite build",
    "preview": "vite preview",
    "electron-dev": "cross-env NODE_ENV=development concurrently \"npm run dev\" \"wait-on http://127.0.0.1:5173 && electron main.cjs\"",
    "electron-make": "npm run build && npx electron-forge make",
    "electron-package": "npm run build && npx electron-forge package"
  },
  "dependencies": {
    "react": "^19.1.0",
    "react-dom": "^19.1.0"
  },
  "devDependencies": {
    "@electron-forge/cli": "^6.4.2",
    "@electron-forge/maker-deb": "^6.4.2",
    "@electron-forge/maker-squirrel": "^6.4.2",
    "@eslint/js": "^9.25.0",
    "@types/react": "^19.1.2",
    "@types/react-dom": "^19.1.2",
    "@vitejs/plugin-react": "^4.4.1",
    "concurrently": "^9.2.0",
    "cross-env": "^10.0.0",
    "electron": "^28.3.3",
    "eslint": "^9.25.0",
    "eslint-plugin-react-hooks": "^5.2.0",
    "eslint-plugin-react-refresh": "^0.4.19",
    "globals": "^16.0.0",
    "vite": "^6.3.5",
    "wait-on": "^8.0.4"
  },
  "config": {
    "forge": {
      "packagerConfig": {
        "executableName": "frontend",
        "platform": [
          "linux",
          "win32"
        ]
      },
      "makers": [
        {
          "name": "@electron-forge/maker-squirrel",
          "config": {
            "name": "frontend"
          }
        },
        {
          "name": "@electron-forge/maker-deb",
          "config": {}
        }
      ]
    }
  }
}
