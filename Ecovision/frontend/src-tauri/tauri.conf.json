{
  "$schema": "../node_modules/@tauri-apps/cli/config.schema.json",
  "productName": "Ecovision",
  "version": "0.1.0",
  "identifier": "com.ecovision.app",
  "build": {
    "frontendDist": "../dist",
    "devUrl": "http://127.0.0.1:5173",
    "beforeDevCommand": "npm run dev",
    "beforeBuildCommand": "npm run build"
  },
  "app": {
    "windows": [
      {
        "title": "Ecovision",
        "width": 800,
        "height": 600,
        "resizable": true,
        "fullscreen": false
      }
    ],
    "security": {
      "csp": null
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/ecovision_32x32.png",
      "icons/ecovision_128x128.png",
      "icons/ecovision_128x128.png",
      "icons/icon.icns",
      "icons/ecovision.ico"
    ]
  }
}
